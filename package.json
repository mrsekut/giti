{
  "name": "@mrsekut/giti",
  "version": "0.2.2",
  "author": "mrsekut",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mrsekut/giti.git"
  },
  "main": "dist/cli.js",
  "dependencies": {
    "@effect/cli": "^0.70.0",
    "@effect/platform-bun": "^0.80.0",
    "effect": "^3.17.14",
    "ink": "^6.3.1",
    "ink-select-input": "^6.2.0",
    "react": "^19.1.1",
    "simple-git": "^3.21.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.11.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  },
  "bin": {
    "giti": "dist/cli.js"
  },
  "description": "Interactive Git CLI tool",
  "files": [
    "dist/**/*"
  ],
  "keywords": [
    "git",
    "cli",
    "interactive"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "bun run src/cli.ts",
    "build": "bun build ./src/cli.ts --outdir ./dist --target node",
    "prepublishOnly": "bun run build",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "check": "bun run typecheck && bun run format"
  },
  "type": "module"
}
